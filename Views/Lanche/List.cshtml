@model LancheListViewModel

<div><h2>Todos os Lanches</h2></div>

@foreach(var lanche in Model.Lanches)
{
<div class="col-sm-4 colo-lg-4 col-md-4">
    <div class="thumbnail">
        <p><img src="@lanche.imagemUrl"  class="img-rounded"/></p>
    </div>
    <div class="caption">
        <h3 class="pull-right">
            @lanche.Preco.ToString("c")
        </h3>
        <p>@lanche.DescricaoCurta</p>
    </div>
    
</div>
}


